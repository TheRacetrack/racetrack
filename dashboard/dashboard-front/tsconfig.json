{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "allowJs": true,
    "lib": [
      "dom",
      "es2021",
    ],
    "importsNotUsedAsValues": "preserve",
    "ignoreDeprecations": "5.0",
  },
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
